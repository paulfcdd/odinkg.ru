{% extends 'odinkg/admin/base.html.twig' %}

{% block page_title %}Список страниц{% endblock %}

{% block content %}
    <div class="row">
        <div class="col-lg-12">
            <div class="ibox float-e-margins">
                <div class="ibox-title">

                </div>
                <div class="ibox-content">

                    <table class="table table-hover">
                        <thead>
                        <tr>
                            <th>#</th>
                            <th>URL</th>
                            <th>Название</th>
                            <th>Дата создания</th>
                            <th>Редактировать</th>
                            <th>Удалить</th>
                        </tr>
                        </thead>
                        <tbody>
                        {% for page in pages %}
                            <tr>
                                <td></td>
                                <td>{{ page.slug }}</td>
                                <td>{{ page.pageTitle }}</td>
                                <td>{{ page.dateCreated | date('d.m.Y') }}</td>
                                <td>
                                    <a href="{{ path('service_page.manage',{'page': page.id}) }}" class="btn btn-rounded btn-warning"><span class="fa fa-edit"></span>&nbsp;Править</a>
                                </td>
                                <td>
                                    <button class="btn btn-rounded btn-danger">
                                        <span class="fa fa-trash"></span>&nbsp;Удалить
                                    </button>
                                </td>
                            </tr>
                        {% endfor %}
                        </tbody>
                    </table>
                </div>
                <div class="ibox-footer">
                    <a href="{{ path('service_page.manage') }}" class="btn btn-rounded btn-success"><span class="fa fa-plus"></span>&nbsp;Добавить</a>
                </div>
            </div>
        </div>
    </div>
{% endblock %}