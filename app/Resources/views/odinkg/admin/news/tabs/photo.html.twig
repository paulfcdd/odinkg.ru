<div id="photo" class="tab-pane row">
    <div class="col-xs-12">
        <div class="row">
            {% if news is not null %}
                {% if news.files is not empty %}
                    <div class="col-xs-6">
                        <div class="form-group">
                            {{ form_label(form.files) }}
                            {{ form_widget(form.files, {'attr': {
                                'required': false
                            }}) }}
                        </div>
                    </div>
                    <div class="col-xs-6">
                        <div class="thumbnail" id="file-{{ news.files[0].id }}">
                            <img src="{{ asset('upload/news/'~news.files[0].name) }}" alt="{{ news.files[0].alt }}">
                            <div class="caption text-center">
                                <h3>{{ news.files[0].title }}</h3>
                                <p>
                                    <button class="btn btn-danger delete-file" type="button" data-id="{{ news.files[0].id }}">Удалить</button>
                                </p>
                            </div>
                        </div>
                    </div>
                    {% else %}
                        <div class="col-xs-12">
                            <div class="form-group">
                                {{ form_label(form.files) }}
                                {{ form_widget(form.files) }}
                            </div>
                        </div>
                {% endif %}
                {% else %}
                    <div class="col-xs-12">
                        <div class="form-group">
                            {{ form_label(form.files) }}
                            {{ form_widget(form.files) }}
                        </div>
                    </div>
            {% endif %}

        </div>
    </div>
</div>