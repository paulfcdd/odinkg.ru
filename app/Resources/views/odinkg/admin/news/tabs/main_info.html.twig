<div id="main-info" class="tab-pane active row">
    <div class="col-xs-12">
        <div class="row">
            <div class="form-group col-sm-12">
                {{ form_label(form.title) }}
                {{ form_widget(form.title, {
                    'attr': {
                        'class': 'form-control'
                    }
                }) }}
            </div>
            <div class="form-group col-sm-12">
                {{ form_label(form.content) }}
                {{ form_widget(form.content, {
                    'attr': {
                        'class': 'form-control news-editor',
                        'cols': '3',
                        'rows': '5'
                    }
                }) }}
            </div>
        </div>
    </div>
</div>