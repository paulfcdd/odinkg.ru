{% extends 'odinkg/admin/base.html.twig' %}

{% block top_block %}
    <h2>Новости</h2>
    <small>Все новости</small>
{% endblock %}

{% block custom_css %}

{% endblock %}

{% block content_block %}
    <div class="col-lg-12">

        <div class="ibox float-e-margins">
            <div class="ibox-title">
                <h5>Все новости</h5>
            </div>
            <div class="ibox-content">
                <div class="table-responsive">
                    <table class="table table-striped table-bordered table-hover smartTable">
                        <thead>
                        <tr>
                            <th>ID</th>
                            <th>Заголовок</th>
                            <th>Содержание</th>
                            <th>Автор</th>
                            <th>Дата создания</th>
                            <th>Дата изменения</th>
                            <th>Действия</th>
                        </tr>
                        </thead>
                        <tbody>
                        {% for _news in news %}
                            <tr>
                                <td>{{ _news.id }}</td>
                                <td>{{ _news.title }}</td>
                                <td>{{ _news.content| striptags | slice(0, 150) }}</td>
                                <td>{{ _news.author }}</td>
                                <td>{{ _news.dateCreated|date('d.m.Y') }}</td>
                                <td></td>
                                <td class="text-center">
                                    <div class="btn-group">
                                        <a href="{{ path('admin.news.edit', {
                                            'news': _news.id
                                        }) }}" type="button" class="btn btn-success">
                                            <span class="fa fa-edit"></span>
                                        </a>
                                        <a href="#" type="button" class="btn btn-danger">
                                            <span class="fa fa-trash"></span>
                                        </a>
                                    </div>
                                </td>
                            </tr>
                        {% endfor %}
                        </tbody>
                        <tfoot>
                        <tr>
                            <th>ID</th>
                            <th>Заголовок</th>
                            <th>Содержание</th>
                            <th>Автор</th>
                            <th>Дата создания</th>
                            <th>Дата изменения</th>
                            <th>Действия</th>
                        </tr>
                        </tfoot>
                    </table>
                </div>
            </div>
            <div class="ibox-footer">
                <a class="btn btn-primary" href="{{ path('admin.news.add') }}">
                    <i class="fa fa-plus"></i>&nbsp;Добавить новость
                </a>
                <a class="btn btn-info pull-right" href="{{ path('admin.object.bin') }}">
                    <i class="fa fa-trash"></i> Корзина
                </a>
            </div>
        </div>

    </div>
{% endblock %}

{% block custom_js %}

    <script>

        $('.delete-object').on('click', function () {
            var objectId = $(this).attr('data-objectId'),
                urlPattern = '{{ path('admin.object.delete', {'object': '_object'}) }}';


            $.ajax({
                url: urlPattern.replace('_object', objectId),
                method: 'POST',
                success:function (data) {
                    $('#object-'+data).remove();
                }
            });
        })

    </script>
{% endblock %}