{% extends 'odinkg/admin/base.html.twig' %}

{% block top_block %}
    <h2>Корзина</h2>
{% endblock %}

{% block content_block %}
    <div class="col-lg-12">

        <div class="ibox float-e-margins">
            <div class="ibox-title">
                <h5>Объекты в корзине</h5>
            </div>
            <div class="ibox-content">
                <div class="table-responsive">
                    <table class="table table-striped table-bordered table-hover smartTable">
                        <thead>
                        <tr>
                            <th>ID</th>
                            <th>Назавание</th>
                            <th>Дата удаления</th>
                            <th></th>
                        </tr>
                        </thead>
                        <tbody>
                        {% block bin_data %}
                        {% endblock %}
                        </tbody>
                    </table>
                </div>
            </div>
            <div class="ibox-footer">
                <a class="btn btn-primary" href="{% block return_path %}{% endblock %}">
                    <i class="fa fa-list-ol"></i>&nbsp;Вернуться к списку объектов
                </a>
            </div>
        </div>

    </div>
{% endblock %}

{% block custom_js %}
    <script>

        $('.repair').on('click', function () {
            var object = $(this).data('object'),
                entity = $(this).data('entity');

            $.ajax({
                url: '{{ path('admin.bin.repair') }}',
                data: {
                    object: object,
                    entity: entity
                },
                method: 'POST',
                success:function () {
                    $('#object-'+object).remove();
                }
            });

        });

        $('.delete').on('click', function () {
            var object = $(this).attr('data-object'),
                entity = $(this).data('entity');

            $.ajax({
                url: '{{ path('admin.bin.remove') }}',
                data: {
                    object: object,
                    entity: entity
                },
                method: 'POST',
                success:function () {
                    $('#object-'+object).remove();
                }
            });
        })

    </script>
{% endblock %}